<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChiTietSanPhamActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarchitietsanpham"
        app:title="Chi Tiết Sản Phẩm"
        app:titleTextColor="#F7F7FA"
        android:background="#B4401B"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_margin="5dp"
            android:id="@+id/imageviewchitietsanpham"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:text="Tên Sản Phẩm"
                android:id="@+id/textviewTenCTSP"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F50404"
                android:text="Giá Sản Phẩm"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:id="@+id/textviewGiaCTSP"/>
            <Spinner
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/spinner"
                android:background="@drawable/spinner"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>
            <Button
                android:id="@+id/btndatmua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm Giỏi Hàng"
                android:textSize="15dp"
                android:textColor="#031135"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="30sp"
            android:textColor="#f20"
            android:text="MÔ TẢ SẢN PHẨM"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/textviewMotaCTSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </ScrollView>


    </LinearLayout>

</LinearLayout>